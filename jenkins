
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
               
                checkout scm
            }
        }
        stage('Branch Check') {
            steps {
                script {
                    
                    def branchName = env.GIT_BRANCH

                    
                    if (branchName == 'main') {
                        echo 'On main branch'
                        
                    } else {
                        echo "Not on main branch, current branch: ${branchName}"
                        
                    }
                }
            }
        }
    }
}
