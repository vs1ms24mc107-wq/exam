pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Branch Check') {
            steps {
                script {
                    def branchName = env.BRANCH_NAME
                    if (branchName == 'main') {
                        echo 'Main branch build'
                       
                    } else (branchName == 'dev') {
                        echo 'Developer branch build'
                       
                    } 
                }
            }
        }
      
    }
}
